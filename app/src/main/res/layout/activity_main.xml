<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="jnorbury.jonahnorbury_pset4.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/to_do_list_title_text_view"
        android:textSize="36sp"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white" />

    <TextView
        android:text="@string/todo_add_task_hint_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_marginTop="20dp"
        android:textAlignment="center" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="348dp"
        android:textAlignment="gravity"
        android:id="@+id/tasklistview" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_weight="1"
            android:hint="@string/new_task_edit_text" />

        <Button
            android:text="@string/add_task_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="addNewToDoTask"
            android:id="@+id/button"
            android:layout_weight="1"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
